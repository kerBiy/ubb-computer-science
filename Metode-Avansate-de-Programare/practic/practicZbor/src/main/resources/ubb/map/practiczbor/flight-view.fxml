<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ubb.map.practiczbor.controller.FlightController" spacing="10" alignment="CENTER">
    <ComboBox fx:id="fromComboBox" promptText="Select Departure Location" />
    <ComboBox fx:id="toComboBox" promptText="Select Destination" />
    <DatePicker fx:id="departureDatePicker" promptText="Select Departure Date" />
    <TableView fx:id="flightTableView" prefHeight="200.0">
        <columns>
            <TableColumn fx:id="fromColumn" text="From" />
            <TableColumn fx:id="toColumn" text="To" />
            <TableColumn fx:id="departureColumn" text="Departure Time" />
            <TableColumn fx:id="seatsColumn" text="Seats" />
            <TableColumn fx:id="availableSeatsColumn" text="Available Seats" />
        </columns>
    </TableView>
    <Button fx:id="purchaseButton" text="Cumpără" />
</VBox>